</style>
<body>
    <nav>
        <ul>
            <li><a href="/logout">LogOut</a></li>
        </ul>
    </nav>
    <div class="content">
        <h1>Welcome to edit page</h1>

{{#if user}}
      <ul>
        <li style="list-style: none;  color: rgb(195, 177, 155);"> Resetting details of {{user.username}}</li>
    </ul>
<form action="/edit/{{user._id}}" method="post" onsubmit="return passCheck(event)">
<div id="message" style="color: red;"></div>
<div id="messagePass" style="color: red;"></div>
  <ul class="formul">
    <li>
      <label for="newName">Enter New Username</label>
      <input type="text" id="newName" name="newName">
    </li>
    <li>
      <label for="newPass">Enter New Password</label>
      <input type="password" id="newPass" name="newPass">
    </li>
    <li>
      <label for="newPassRepeat">Re-enter New Password</label>
      <input type="password" id="newPassRepeat" name="newPassRepeat">
    </li>
    <li>
      <button type="submit" class="butt" >Save Changes</button>
    </li>
  </ul>
</form>

<form action="/edit/{{user._id}}/delete" method="post">
<button class="DelButton">Delete </button>
</form>
{{/if}}
<script>
 function passCheck(event){
    const pass1=document.getElementById("newPass").value
    const pass2=document.getElementById("newPassRepeat").value
    const messagePass=document.getElementById("messagePass")
    const message=document.getElementById("message")

if(pass1!==pass2){
    const text="Your Passwords Does't Match"
message.textContent=text
event.preventDefault()
return false

}
return true

}
</script>
  
    </div>
</body>
</html>
